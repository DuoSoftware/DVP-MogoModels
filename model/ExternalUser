var mongoose = require('mongoose');
var Schema = mongoose.Schema;
var uniqueValidator = require('mongoose-unique-validator');



var contactSchema = new Schema({
    contact:String,
    type:String,
    display: String,
    verified: Boolean
}, {_id: false});



var externalUserSchema = new Schema({
    name: String,
    title: String,
    avatar: String,
    birthday: Date,
    gender: String,
    address: {
        zipcode: String,
        number: String,
        street: String,
        city: String,
        province: String,
        country: String,
    },
    firstname: { type: String, required: true },
    lastname: { type: String, required: true },
    locale: String,
    ssn:  {type: String, unique: true, sparse: true},
    password: String,
    phone: {type: String, unique: true, required: true},
    email: {type: String, unique: true, sparse: true},
    landnumber: String,
    facebook: String,
    twitter: String,
    linkedin: String,
    googleplus: String,
    skype: String,
    company: { type: Number, required: true },
    tenant: { type: Number, required: true },
    contacts: [contactSchema],
    tags: [String],
    dynamic_form:[{field:{ type: String, required: true}, value:{ type: String, required: true}, _id: false}],
    custom_fields: {},
    created_at: Date,
    updated_at: Date
});




externalUserSchema.plugin(uniqueValidator);
externalUserSchema.index({firstname:"text", lastname:"text", phone:"text", email:"text"});
var ExternalUser = mongoose.model('ExternalUser', externalUserSchema);
module.exports = ExternalUser;

